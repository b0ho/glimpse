{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "üêõ Debug Backend (Local)",
      "request": "launch",
      "mainClass": "com.glimpse.server.GlimpseApplication",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "env": {
        "SPRING_PROFILES_ACTIVE": "local"
      },
      "vmArgs": "-Dspring.profiles.active=local",
      "args": "",
      "stopOnEntry": false,
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "java",
      "name": "üöÄ Run Backend (Local)",
      "request": "launch",
      "mainClass": "com.glimpse.server.GlimpseApplication",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "env": {
        "SPRING_PROFILES_ACTIVE": "local"
      },
      "vmArgs": "-Dspring.profiles.active=local",
      "noDebug": true
    },
    {
      "type": "java",
      "name": "üîß Debug Backend (Dev)",
      "request": "launch",
      "mainClass": "com.glimpse.server.GlimpseApplication",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "env": {
        "SPRING_PROFILES_ACTIVE": "dev"
      },
      "vmArgs": "-Dspring.profiles.active=dev",
      "stopOnEntry": false
    },
    {
      "type": "java",
      "name": "üîå Attach to Running Backend",
      "request": "attach",
      "hostName": "localhost",
      "port": 5005,
      "projectName": "backend"
    },
    {
      "type": "java",
      "name": "üß™ Debug Tests",
      "request": "launch",
      "mainClass": "",
      "projectName": "backend",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal"
    }
  ]
}
