{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend 실행 (Spring Boot)",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "bootRun"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true,
      "runOptions": {
