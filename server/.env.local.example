# Local Development Environment Variables (EXAMPLE)
# Copy this file to .env.local and fill in your actual values

# Database URL for Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/glimpse_dev
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/glimpse_dev

# Local Redis
REDIS_URL=redis://localhost:6379

# Development JWT Secret (generate new: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Encryption Key (32 bytes hex) (generate new: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here_64_hex_characters

# Local Clerk Keys (get from https://clerk.com)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# Local AWS (optional for local S3 testing)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# Local Firebase (optional)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Local Email Service (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=no-reply@glimpse.local

# Local SMS Service (optional)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Local Payment Gateway (optional)
TOSSPAY_CLIENT_KEY=your_tosspay_client_key
TOSSPAY_SECRET_KEY=your_tosspay_secret_key
KAKAOPAY_ADMIN_KEY=your_kakaopay_admin_key
KAKAOPAY_CID=your_kakaopay_cid
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Local OCR Service (optional)
NAVER_OCR_API_URL=your_naver_ocr_api_url
NAVER_OCR_SECRET_KEY=your_naver_ocr_secret_key

# Local Kakao API (optional)
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password
