# Application Configuration (Non-sensitive)
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# Feature Flags
USE_DEV_AUTH=false
DEV_AUTH_ENABLED=true
DEV_ACCOUNT_TYPE=premium

# Service URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# AWS Configuration (Bucket names - not credentials)
AWS_S3_BUCKET=
AWS_REGION=ap-northeast-2
CLOUDFRONT_DOMAIN=
CLOUDFRONT_DISTRIBUTION_ID=

# Redis Configuration (non-sensitive)
REDIS_URL=redis://localhost:6379

# Email Configuration (non-sensitive)
EMAIL_FROM=no-reply@glimpse.app
EMAIL_FROM_NAME=Glimpse Dating

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_AUDIO_TYPES=audio/mp4,audio/m4a,audio/mpeg,audio/webm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=development_session_secret
SESSION_MAX_AGE=86400000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Locale Settings
DEFAULT_LOCALE=ko
SUPPORTED_LOCALES=ko,en,ja,zh,vi,th,es,fr

# Development Tools
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND=false

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Notification Settings
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3

# Job Queue Settings
JOB_QUEUE_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Security Settings
CORS_ORIGIN=http://localhost:19006,http://localhost:3000,http://localhost:8081
HELMET_ENABLED=true
CSRF_ENABLED=false

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# App Store Configuration
APP_STORE_URL=https://apps.apple.com/app/glimpse
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.glimpse

# Social Media Links
INSTAGRAM_URL=https://instagram.com/glimpse_korea
FACEBOOK_URL=https://facebook.com/glimpsekorea
TWITTER_URL=https://twitter.com/glimpse_kr

# Support
SUPPORT_EMAIL=support@glimpse.app
HELP_CENTER_URL=https://help.glimpse.app

# Terms and Privacy
TERMS_URL=https://glimpse.app/terms
PRIVACY_URL=https://glimpse.app/privacy

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=시스템 점검 중입니다. 잠시 후 다시 시도해주세요.