# Glimpse Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:8081

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/glimpse_db?schema=public"

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_DOMAIN=accounts.dev

# JWT Secret (for legacy support)
JWT_SECRET=your_jwt_secret_key_here

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Payment Gateways
## Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

## TossPay
TOSS_SECRET_KEY=test_sk_your_toss_secret_key
TOSS_CLIENT_KEY=test_ck_your_toss_client_key

## KakaoPay
KAKAO_SECRET_KEY=your_kakao_secret_key
KAKAO_CID=TC0ONETIME
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=glimpse-uploads
S3_BUCKET_NAME=glimpse-uploads

# CloudFront CDN Configuration
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
CLOUDFRONT_DOMAIN_NAME=d1234567890.cloudfront.net
ENABLE_IMAGE_OPTIMIZATION=true

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# External APIs
## Kakao Maps
KAKAO_MAP_API_KEY=your_kakao_map_api_key

## OCR Services
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Sentry (Error Tracking - optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Base URL for callbacks
BASE_URL=http://localhost:8080