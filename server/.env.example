# =====================================================
# Environment Configuration Template
# =====================================================
# SECURITY WARNING: 
# - Copy this file to .env and fill in actual values
# - NEVER commit the actual .env file to version control
# - Use strong, randomly generated secrets in production
# =====================================================

# Application Configuration
NODE_ENV=development  # Options: development, staging, production
PORT=3000
CLIENT_URL=http://localhost:3000
WEB_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/glimpse_db"
# For production, use connection pooling:
# DATABASE_URL="postgresql://user:password@localhost:5432/glimpse_db?connection_limit=10"

# =====================================================
# Authentication & Security
# =====================================================

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_SECRET_MIN_64_CHARS"
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Clerk Authentication
CLERK_SECRET_KEY="sk_test_xxxxx"
CLERK_PUBLISHABLE_KEY="pk_test_xxxxx"
CLERK_WEBHOOK_SECRET="whsec_xxxxx"

# Encryption Keys
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="CHANGE_THIS_32_BYTE_HEX_KEY"
# Generate with: openssl rand -hex 16
ENCRYPTION_IV="CHANGE_THIS_16_BYTE_HEX_IV"

# Session Secret
# Generate with: openssl rand -base64 32
SESSION_SECRET="CHANGE_THIS_SESSION_SECRET_MIN_32_CHARS"

# =====================================================
# External Services
# =====================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="AKIA_xxxxx"
AWS_SECRET_ACCESS_KEY="xxxxx"
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET="glimpse-uploads"
AWS_CLOUDFRONT_DOMAIN="d1234567890.cloudfront.net"
AWS_CLOUDFRONT_DISTRIBUTION_ID="E1234567890"

# Firebase Cloud Messaging
FCM_SERVICE_ACCOUNT='{"type":"service_account","project_id":"your-project-id"}'
FIREBASE_PROJECT_ID="glimpse-app"

# Payment Gateways
STRIPE_SECRET_KEY="sk_test_xxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

TOSS_SECRET_KEY="test_xxxxx"
TOSS_CLIENT_KEY="test_ck_xxxxx"
TOSS_WEBHOOK_SECRET="xxxxx"

KAKAO_APP_KEY="xxxxx"
KAKAOPAY_ADMIN_KEY="xxxxx"
KAKAOPAY_CID="TC0ONETIME"

# Redis Cache/Session Store
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""  # Set password in production

# Email Service
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-specific-password"
EMAIL_FROM="Glimpse <noreply@glimpse.app>"

# SMS Service
SMS_API_KEY="xxxxx"
SMS_API_SECRET="xxxxx"
SMS_SENDER_NUMBER="01012345678"

# =====================================================
# Third-Party APIs
# =====================================================

# Kakao Services
KAKAO_API_KEY="xxxxx"
KAKAO_REST_API_KEY="xxxxx"
KAKAO_MAPS_API_KEY="xxxxx"

# Naver Services
NAVER_CLIENT_ID="xxxxx"
NAVER_CLIENT_SECRET="xxxxx"

# Google Services
GOOGLE_VISION_API_KEY="xxxxx"

# =====================================================
# Development Settings (DISABLE IN PRODUCTION!)
# =====================================================

# WARNING: Set to false in production!
USE_DEV_AUTH=false

# =====================================================
# Feature Flags
# =====================================================

ENABLE_PREMIUM_FEATURES=true
ENABLE_LOCATION_FEATURES=true
ENABLE_VIDEO_CHAT=false
ENABLE_ANALYTICS=true

# =====================================================
# Monitoring & Logging (Optional)
# =====================================================

# Sentry Error Tracking
SENTRY_DSN=""

# New Relic APM
NEW_RELIC_LICENSE_KEY=""

# Log Level: error, warn, info, debug, verbose
LOG_LEVEL=info