# Server Environment Variables

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/glimpse

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# Firebase Admin
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@glimpse.app

# SMS Service
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Payment Gateway - TossPay
TOSSPAY_CLIENT_KEY=your_tosspay_client_key
TOSSPAY_SECRET_KEY=your_tosspay_secret_key

# Payment Gateway - KakaoPay
KAKAOPAY_ADMIN_KEY=your_kakaopay_admin_key
KAKAOPAY_CID=your_kakaopay_cid

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Redis
REDIS_URL=redis://localhost:6379

# Sentry
SENTRY_DSN=your_sentry_dsn

# OCR Service
NAVER_OCR_API_URL=your_naver_ocr_api_url
NAVER_OCR_SECRET_KEY=your_naver_ocr_secret_key

# Kakao API
KAKAO_REST_API_KEY=your_kakao_rest_api_key
