# Database
DATABASE_URL="postgresql://username:password@localhost:5432/glimpse?schema=public"

# Server Configuration
NODE_ENV="development"
PORT=8080
FRONTEND_URL="http://localhost:8081"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# Clerk Configuration (for JWT verification)
CLERK_PUBLISHABLE_KEY="pk_test_glimpse_development_key"
CLERK_SECRET_KEY="sk_test_glimpse_secret_key"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Email Service (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# SMS Service (Twilio or Korean SMS service)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Korean SMS Service (예: 알리고)
ALIGO_API_KEY="your-aligo-api-key"
ALIGO_USER_ID="your-aligo-user-id"
ALIGO_SENDER="01012345678"

# Payment (Stripe)
STRIPE_SECRET_KEY="sk_test_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_stripe_webhook_secret"

# Korean Payment Services
TOSS_CLIENT_KEY="test_ck_toss_payments"
TOSS_SECRET_KEY="test_sk_toss_payments"
KAKAO_PAY_CID="TC0ONETIME"
KAKAO_PAY_SECRET="your-kakao-pay-secret"

# Firebase (for push notifications)
FIREBASE_PROJECT_ID="glimpse-app"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@glimpse-app.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"

# File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET="glimpse-uploads"

# Google Vision API (for OCR)
GOOGLE_VISION_API_KEY="your-google-vision-api-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"