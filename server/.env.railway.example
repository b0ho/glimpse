# Railway PostgreSQL 연결을 위한 환경 변수 예시
# 실제 사용 시 .env 파일로 복사하고 실제 값으로 교체하세요

# Railway PostgreSQL Database URL
# Railway Dashboard → PostgreSQL → Connect → Postgres Connection URL 복사
DATABASE_URL="postgresql://postgres:[PASSWORD]@[SERVER].railway.app:5432/railway"

# 예시 형식:
# DATABASE_URL="postgresql://postgres:Xy9vK2mN8pQ@containers-us-west-91.railway.app:5432/railway"

# 서버 설정
NODE_ENV=production
PORT=3001

# JWT Secret (32자 이상의 랜덤 문자열)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random_32_chars_minimum

# Encryption Key (32 bytes hex) - 현재 값 유지
ENCRYPTION_KEY=c55bb6a39f66e80e5601d53d25a5e9d3cf64397655eedfff7efd10964db4246f

# Clerk Authentication (실제 프로덕션 키로 교체)
CLERK_SECRET_KEY=sk_live_your_production_clerk_secret
CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_publishable

# AWS S3 (선택사항)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=

# Firebase Admin (선택사항)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Redis (선택사항)
REDIS_URL=

# 프로덕션 설정
DEV_AUTH_ENABLED=false

# Railway 관련 정보 (참고용)
# Railway Dashboard: https://railway.app/dashboard
# 무료 플랜: 월 $5 크레딧, 500MB RAM, 1GB 디스크
# 사용량 모니터링: Dashboard → 프로젝트 → Usage 탭