# Railway PostgreSQL 연결을 위한 환경 변수 예시
# 실제 사용 시 .env 파일로 복사하고 실제 값으로 교체하세요

# Railway PostgreSQL Database URL
# Railway Dashboard → PostgreSQL → Connect → Postgres Connection URL 복사
DATABASE_URL="postgresql://postgres:[PASSWORD]@[SERVER].railway.app:5432/railway"

# 예시 형식:
# DATABASE_URL="postgresql://postgres:Xy9vK2mN8pQ@containers-us-west-91.railway.app:5432/railway"

# 서버 설정
NODE_ENV=production
PORT=3001

# JWT Secret (32자 이상의 랜덤 문자열) (generate: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random_32_chars_minimum

# Encryption Key (32 bytes hex) (generate: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here_64_hex_characters_replace_this_with_new_key

# Clerk Authentication (get from https://clerk.com - use PRODUCTION keys!)
CLERK_SECRET_KEY=sk_live_your_production_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_live_your_production_clerk_publishable_key_here

# AWS S3 (선택사항)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=

# Firebase Admin (선택사항)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Redis (선택사항)
REDIS_URL=

# 프로덕션 설정
DEV_AUTH_ENABLED=false

# Railway 관련 정보 (참고용)
# Railway Dashboard: https://railway.app/dashboard
# 무료 플랜: 월 $5 크레딧, 500MB RAM, 1GB 디스크
# 사용량 모니터링: Dashboard → 프로젝트 → Usage 탭