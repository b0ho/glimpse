# Docker Environment Variables

# Database
POSTGRES_USER=glimpse
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=glimpse_db

# Redis
REDIS_PASSWORD=your_redis_password_here

# Application
NODE_ENV=production
PORT=3001

# Authentication (Clerk)
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_DOMAIN=your-clerk-domain.clerk.accounts.dev

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=ap-northeast-2

# Firebase
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id"}

# Payment - Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Payment - Korean Gateways
TOSSPAY_CLIENT_KEY=your_tosspay_client_key
TOSSPAY_SECRET_KEY=your_tosspay_secret_key
KAKAO_PAY_CID=your_kakao_pay_cid
KAKAO_PAY_SECRET_KEY=your_kakao_pay_secret_key

# External APIs
KAKAO_MAPS_API_KEY=your_kakao_maps_api_key
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# pgAdmin
PGADMIN_EMAIL=admin@glimpse.com
PGADMIN_PASSWORD=your_pgadmin_password

# Domain (for production)
DOMAIN=glimpse.app
API_URL=https://api.glimpse.app
WEB_URL=https://admin.glimpse.app