# ==============================================
# GLIMPSE 환경 변수 설정 (비밀 정보)
# ==============================================
# 이 파일을 복사하여 config/private/secrets.env 로 저장하고 실제 값들을 입력하세요.
# config/private/ 폴더는 .gitignore에 포함되어 커밋되지 않습니다.

# ==============================================
# 기본 환경 설정
# ==============================================
NODE_ENV=development
PORT=3001

# ==============================================
# 데이터베이스 설정
# ==============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/glimpse_dev
REDIS_URL=redis://localhost:6379

# ==============================================
# JWT 및 암호화
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-byte-encryption-key-in-hex-format

# ==============================================
# Clerk 인증 서비스
# ==============================================
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==============================================
# AWS 서비스
# ==============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=glimpse-storage

# ==============================================
# 결제 서비스
# ==============================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Toss Payments
TOSS_CLIENT_KEY=test_ck_your-toss-client-key
TOSS_SECRET_KEY=test_sk_your-toss-secret-key

# Kakao Pay
KAKAO_PAY_CID=TC0ONETIME
KAKAO_PAY_SECRET=your-kakao-pay-secret

# ==============================================
# Firebase 서비스
# ==============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789

# ==============================================
# 외부 API 서비스
# ==============================================
# Kakao API
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_APP_KEY=your-kakao-app-key

# Naver API
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# ==============================================
# 이메일 & SMS 서비스
# ==============================================
# Email (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SMS Service
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_SENDER=01012345678

# ==============================================
# 모니터링 & 로깅
# ==============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# ==============================================
# 개발용 설정
# ==============================================
USE_DEV_AUTH=true
DEV_ACCOUNT_TYPE=premium
ADMIN_EMAIL=admin@glimpse.app
ADMIN_PASSWORD=your-admin-password

# 개발용 JWT 토큰 (실제 사용 시 새로 생성)
DEV_AUTH_TOKEN=your-development-jwt-token-here