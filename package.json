{
  "name": "glimpse-monorepo",
  "version": "0.1.0",
  "main": "index.ts",
  "description": "Glimpse Dating App - Monorepo with Mobile + Server",
  "workspaces": [
    "web",
    "mobile",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && expo start",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:web && npm run build:mobile",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && expo build:web",
    "test": "npm run test:web && npm run test:mobile",
    "test:web": "cd web && jest",
    "test:mobile": "cd mobile && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "npm run lint:server && npm run lint:mobile",
    "lint:server": "cd server && npm run lint",
    "lint:mobile": "eslint mobile --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint:fix:server && npm run lint:fix:mobile",
    "lint:fix:server": "cd server && npm run lint --fix",
    "lint:fix:mobile": "eslint mobile --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "npm run typecheck:web && npm run typecheck:mobile",
    "typecheck:web": "cd web && tsc --noEmit",
    "typecheck:mobile": "cd mobile && tsc --noEmit",
    "db:migrate": "cd server && npx prisma migrate dev",
    "db:studio": "cd server && npx prisma studio",
    "db:generate": "cd server && npx prisma generate",
    "env:setup": "node scripts/env-setup.js",
    "env:check": "node scripts/env-check.js",
    "env:vault": "npx dotenv-vault@latest",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.14.7",
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "@stripe/stripe-react-native": "^0.50.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "expo": "~53.0.20",
    "expo-barcode-scanner": "^13.0.1",
    "expo-constants": "^17.1.7",
    "expo-crypto": "^14.1.5",
    "expo-device": "^7.1.4",
    "expo-image-picker": "^16.1.4",
    "expo-location": "^18.1.6",
    "expo-notifications": "^0.31.4",
    "expo-secure-store": "^14.2.3",
    "expo-status-bar": "~2.2.3",
    "expo-web-browser": "^14.2.0",
    "express": "^5.1.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-encrypted-storage": "^4.0.3",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-iap": "^13.0.1",
    "react-native-qrcode-svg": "^6.3.15",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-vector-icons": "^10.2.0",
    "react-native-web": "^0.20.0",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.14",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "dotenv-vault": "^1.27.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "private": true
}
