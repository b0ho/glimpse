{
  "name": "glimpse-monorepo",
  "version": "0.1.0",
  "main": "index.ts",
  "description": "Glimpse Dating App - Monorepo with Mobile + Server",
  "workspaces": [
    "web",
    "mobile",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:mobile\"",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:web && npm run build:mobile",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && expo build:web",
    "test": "npm run test:web && npm run test:mobile",
    "test:web": "cd web && jest",
    "test:mobile": "cd mobile && npm test",
    "test:e2e": "cd tests && playwright test",
    "test:e2e:ui": "cd tests && playwright test --ui",
    "test:e2e:debug": "cd tests && playwright test --debug",
    "lint": "npm run lint:server && npm run lint:mobile",
    "lint:server": "cd server && npm run lint",
    "lint:mobile": "eslint mobile --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint:fix:server && npm run lint:fix:mobile",
    "lint:fix:server": "cd server && npm run lint --fix",
    "lint:fix:mobile": "eslint mobile --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "npm run typecheck:web && npm run typecheck:mobile",
    "typecheck:web": "cd web && tsc --noEmit",
    "typecheck:mobile": "cd mobile && tsc --noEmit",
    "db:migrate": "cd server && npx prisma migrate dev",
    "db:studio": "cd server && npx prisma studio",
    "db:generate": "cd server && npx prisma generate",
    "env:setup": "node scripts/env-setup.js",
    "env:check": "node scripts/env-check.js",
    "env:vault": "npx dotenv-vault@latest",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "axe-playwright": "^2.0.1",
    "@types/node": "^24.0.14",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "dotenv-vault": "^1.27.0",
    "eslint": "^9.31.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "private": true
}
