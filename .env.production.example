# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_live_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_live_your-clerk-secret-key

# AWS Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=glimpse-uploads
S3_BACKUP_BUCKET=glimpse-backups

# Payment Services - Toss
TOSS_SECRET_KEY=your-toss-secret-key

# Payment Services - Kakao
KAKAO_SECRET_KEY=your-kakao-secret-key
