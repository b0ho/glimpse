# Production Environment Variables Example
# Copy this file to .env.production and fill in your actual values

# Database
DATABASE_URL="postgresql://glimpse_prod:SECURE_PASSWORD@your-rds-endpoint:5432/glimpse_prod?schema=public&sslmode=require"

# Redis
REDIS_HOST="your-elasticache-endpoint"
REDIS_PORT=6379
REDIS_PASSWORD="SECURE_REDIS_PASSWORD"

# Security
JWT_SECRET="YOUR_SECURE_64_CHARACTER_JWT_SECRET"
ENCRYPTION_KEY="YOUR_SECURE_32_CHARACTER_KEY"

# AWS
AWS_REGION="ap-northeast-2"
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_S3_BUCKET="glimpse-prod-uploads"

# Payment - Stripe
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Payment - Korean Gateways
TOSS_CLIENT_KEY="live_..."
TOSS_SECRET_KEY="live_..."
KAKAO_PAY_CID="TC0ONETIME"
KAKAO_PAY_SECRET_KEY="..."

# External APIs
KAKAO_REST_API_KEY="..."
NAVER_CLIENT_ID="..."
NAVER_CLIENT_SECRET="..."
GOOGLE_CLOUD_API_KEY="..."

# Firebase
FIREBASE_PROJECT_ID="glimpse-prod"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@glimpse-prod.iam.gserviceaccount.com"

# Email (AWS SES)
SMTP_HOST="email-smtp.ap-northeast-2.amazonaws.com"
SMTP_PORT=587
SMTP_USER="..."
SMTP_PASS="..."
FROM_EMAIL="noreply@glimpse.app"

# SMS
SMS_API_KEY="..."
SMS_API_SECRET="..."
SMS_SENDER="1588-0000"

# Clerk Auth
CLERK_PUBLISHABLE_KEY="pk_live_..."
CLERK_SECRET_KEY="sk_live_..."

# Admin
ADMIN_EMAIL="admin@glimpse.app"
ADMIN_PASSWORD="SECURE_ADMIN_PASSWORD"

# Application URLs
FRONTEND_URL="https://glimpse.app"
API_URL="https://api.glimpse.app"
SOCKET_URL="wss://api.glimpse.app"

# Monitoring
SENTRY_DSN="https://...@sentry.io/..."
NEW_RELIC_LICENSE_KEY="..."

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_VIDEO_CALLS=true
ENABLE_LOCATION_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Node Environment
NODE_ENV="production"
PORT=8000