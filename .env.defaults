# ==============================================
# GLIMPSE 기본 환경 변수 설정
# ==============================================
# 이 파일은 Git으로 관리되며, 공개 가능한 기본 설정값들을 포함합니다.
# 실제 비밀키나 개인 설정은 config/private/secrets.env 에 설정하세요.

# ==============================================
# 기본 환경 설정
# ==============================================
NODE_ENV=development
PORT=3001

# ==============================================
# 개발용 데이터베이스 (Docker Compose 기본값)
# ==============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/glimpse_dev
REDIS_URL=redis://localhost:6379

# ==============================================
# 개발 모드 설정
# ==============================================
USE_DEV_AUTH=true
DEV_ACCOUNT_TYPE=premium

# ==============================================
# JWT 기본값 (개발용 - 프로덕션에서는 반드시 변경)
# ==============================================
JWT_SECRET=development_jwt_secret_key_please_change_in_production
JWT_EXPIRES_IN=7d

# ==============================================
# AWS 기본 설정 (개발용)
# ==============================================
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=glimpse-dev-storage

# ==============================================
# 결제 서비스 기본값 (테스트 키 형식)
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_replace_with_actual_key
STRIPE_SECRET_KEY=sk_test_replace_with_actual_key
TOSS_CLIENT_KEY=test_ck_replace_with_actual_key  
TOSS_SECRET_KEY=test_sk_replace_with_actual_key
KAKAO_PAY_CID=TC0ONETIME

# ==============================================
# Firebase 기본값
# ==============================================
FIREBASE_PROJECT_ID=glimpse-dev-project
FIREBASE_AUTH_DOMAIN=glimpse-dev-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=glimpse-dev-project.appspot.com

# ==============================================
# 외부 서비스 기본값
# ==============================================
KAKAO_REST_API_KEY=replace_with_actual_key
NAVER_CLIENT_ID=replace_with_actual_key

# ==============================================
# 이메일 설정 기본값
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
SMS_SENDER=01012345678

# ==============================================
# 관리자 설정 기본값 (개발용)
# ==============================================
ADMIN_EMAIL=admin@glimpse.app
ADMIN_PASSWORD=admin123_please_change

# ==============================================
# 프론트엔드 URL (환경별)
# ==============================================
FRONTEND_URL=http://localhost:3000